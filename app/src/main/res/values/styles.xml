<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LoginButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#d0256a</item> <!-- Blue background color -->
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="RegistrationButtonStyle" parent="LoginButtonStyle">
        <item name="android:background">#d0256a</item> <!-- Green background color -->
    </style>

    <style name="RegistrationEditTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#FFFFFFFF</item> <!-- Customize background drawable -->
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">#808080</item> <!-- Hint text color -->
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="RegistrationRadioButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#FFFFFFFF</item> <!-- Customize background drawable -->
        <item name="android:padding">8dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColorHint">#808080</item> <!-- Hint text color -->
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="RegisterButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#d0256a</item> <!-- Pink background color -->
        <item name="android:padding">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">32dp</item>
    </style>


</resources>
